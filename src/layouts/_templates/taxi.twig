<!DOCTYPE html>
<html class="h-full" lang="en-US">

<head>
    {% block head %}
        {% include '../partials/head.twig' %}

        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{{ title }}</title>

        <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    {% endblock %}
</head>
<body class="flex flex-col h-full text-body text-grey-light-a js-body {{ bodyClasses }}" x-data :class="$store.menuOverlay.isOpen && 'overflow-hidden'">
{% block page %}
    {% block header %}
        {% include '../_app/header.twig' %}
    {% endblock %}

    {% block content %}{% endblock %}

    {% block footer %}
        {% include '../_app/footer.twig' %}
    {% endblock %}
{% endblock %}
<script type="module" src="/src/scripts/index.js"></script>
</body>
</html>
